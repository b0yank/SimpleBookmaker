@model ExistingCoefficientViewModel

<h4>Existing Coefficients:</h4>

<table class="table table-bordered table-hover column-centered">
    <thead>
        <tr>
            <th>Condition</th>
            <th>Coefficient</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var existingCoefficient in Model.ExistingCoefficients)
        {
            <tr>
                <td>@existingCoefficient.BetCondition</td>
                <td>@existingCoefficient.Coefficient.ToString("F2")</td>
                <td>
                    <label class="control-label col-sm-6" style="text-align: right">New Coefficient:</label>
                    <div class="col-sm-6">
                        <form asp-action="@Model.EditAction" method="post">
                            <div class="col-sm-8">
                                <input type="hidden" name="SubjectId" value="@existingCoefficient.SubjectId" />
                                <input type="hidden" name="CoefficientId" value="@existingCoefficient.CoefficientId" />

                                <input type="number" min="0.01" step="0.01" name="NewCoefficient" class="form-control" />
                            </div>
                            <div class="col-sm-4">
                                <input type="submit" value="Edit" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </td>
                <td>
                    <form asp-action="@Model.RemoveAction" method="post">
                        <input type="hidden" name="SubjectId" value="@existingCoefficient.SubjectId" />
                        <input type="hidden" name="CoefficientId" value="@existingCoefficient.CoefficientId" />

                        <input type="submit" value="Remove" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>