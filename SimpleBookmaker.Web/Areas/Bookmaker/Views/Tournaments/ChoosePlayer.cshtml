@model TournamentCoefficientPlayerChoiceModel

@{
    ViewData["Title"] = "Choose a player to set coefficient to";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SetBets" method="post">
    <div class="form-group">
        <label class="control-label col-sm-3">Tournament: </label>
        <div class="col-sm-9">
            <input type="text" value="@Model.Tournament" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Team: </label>
        <div class="col-sm-9">
            <input type="text" value="@Model.Team" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Condition: </label>
        <div class="col-sm-9">
            <input type="text" value="@Model.BetCondition" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Coefficient: </label>
        <div class="col-sm-9">
            <input type="text" value="@Model.Coefficient.ToString("F2")" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Player: </label>
        <div class="col-sm-9">
            <select name="SubjectId" asp-items="@Model.Players.Select(p => new SelectListItem { Value = p.Id.ToString(), Text = p.Name })" class="form-control"></select>
        </div>
    </div>

    <input type="hidden" name="Coefficient" value="@Model.Coefficient" />
    <input type="hidden" name="TournamentId" value="@Model.TournamentId" />
    <input type="hidden" name="BetType" value="@Model.BetType" />

    <div class="form-group">
        <input type="submit" value="Confirm Coefficient" class="btn btn-success" />
    </div>

    <a asp-action="SetBets" asp-route-tournamentId="@Model.TournamentId" class="btn btn-default">Back to tournament</a>
</form>