@using Microsoft.AspNetCore.Identity
@using SimpleBookmaker.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right loginForm">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right loginForm">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-link navbar-btn navbar-link" style="margin-right: 10px">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-link navbar-btn navbar-link">Log in</a></li>
    </ul>
}
