@model TournamentStatsSetModel

@{
    ViewData["Title"] = "Set Tournament Stats";
}

<h2>Set stats for @Model.Name</h2>

<div class="container">
    <form asp-action="SetTournament" method="post">
        <div class="row">
            <div class="form-group">
                <label class="control-label col-sm-1">Champion:</label>
                <div class="col-sm-4">
                    <select name="ChampionId"
                            asp-items="@Model.Teams.Select(t => new SelectListItem { Value = t.Id.ToString(), Text = t.Name })"
                            class="form-control"></select>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group">
                <div class="col-sm-5">
                    <input type="submit" value="Confirm Stats" class="btn btn-success" style="float: right" />
                </div>
            </div>
        </div>

        <input type="hidden" name="TournamentId" value="@Model.Id" />
    </form>
</div>

